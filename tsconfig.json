{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
//        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
//        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES2015.promise",
            "ES2018.promise",
            "ES2015.iterable"
        ]
    },
//    "exclude": ["/dist","/node_modules"]
}